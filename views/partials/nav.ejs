<div
	class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm"
>
	<!-- Logo -->
	<h3 class="my-0 mr-md-auto font-weight-normal"> Glockoin </h3>

	<% if(user === "undefined") { %>
		<a href="/auth/google">
			<img alt="SignIn" src="https://www.oncrashreboot.com/images/create-apple-google-signin-buttons-quick-dirty-way-google.png"
			width="157,5" height="37,5">
		</a>
	<% } else { %>
		<h5> Hello, <%= user.displayName %> </h5>
	<% } %>

	<div class="dropdown">	
		<button class="dropbtn">
			<img alt="SignIn" src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/b2/Hamburger_icon.svg/1200px-Hamburger_icon.svg.png" width="50" height="50">
		</button>
		<div class="dropdown-content">
		  	<a href="/">Main</a>
			<a href="/send">Send</a>
			<a href="/blockchain">Blockchain</a>


			<% if(user != "undefined") { %>
				<a href="/mine">Mine</a>
				<a href="/auth/logout">Logout</a>
			<% } %>
		</div>
	</div>
</div>
